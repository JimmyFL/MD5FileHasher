<Window x:Class="MD5FileHasher.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MD5FileHasher.App"
        mc:Ignorable="d"
        Title="MD5FileHasher" Height="200" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" Margin="10" Click="OpenFile_BtnClick">Open file</Button>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="10, 10, 10, 20" VerticalAlignment="Center" >
            <Label   Name="FilePathLabel"></Label>
            <Label Name="HashLabel" FontWeight="Bold" HorizontalContentAlignment="Center" ></Label>
        </StackPanel>
        
    </Grid>
</Window>
